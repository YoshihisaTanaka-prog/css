<p style="color: green"><%= notice %></p>

<h1>Units</h1>

<table>
  <tr><th>UnitName</th><th></th><th></th></tr>
  <% @units.each_with_index do |unit, i| %>
    <tr>
      <td>
        <%= unit.name %>
      </td>
      <td>
        <%= link_to "Show", unit %>
      </td>
      <% if i % 10 == 0 %>
        <td><%= link_to "New unit", new_unit_path %></td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
</table>

